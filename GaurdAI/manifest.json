{
  "manifest_version": 3,
  "name": "Element Inspector",
  "version": "1.0",
  "description": "Inspect elements on a webpage, extract text on click, and display in a sidebar.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://fake-api.example.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon1.png",
      "48": "icons/icon2.png",
      "128": "icons/icon3.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon1.png",
    "48": "icons/icon2.png",
    "128": "icons/icon3.png"
  }
}